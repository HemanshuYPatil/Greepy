{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "greepy",
  "version": "0.1.1",
  "identifier": "com.hemanshu.greepy",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "greepy",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "maximized": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFBMzgyRTRFNDEwNTM3MEQKUldRTk53VkJUaTQ0cWtXbjM1bFp1VmsrN1VkNlNpbTcwaUpMd0xhWkgybVZyNWdJWi9CVE5aQUkK",
      "endpoints": [
        "https://github.com/HemanshuYPatil/Greepy/releases/latest/download/latest.json"
      ]
    }
  }
}
